import * as React from "./react.coil"
import * as ReactDOM from "react-dom/client"
let {component, use_state, View, view} = React

impl View for Number = fn({val set!}) = 
  ~:input{onChange: compose(:target :value as_num set!)
          type: "number"
          value: val}::view()

@component
fn SimpleCounter = ~:div[use_state(0) "hey"]

ReactDOM
  .createRoot(document.getElementById("app"))
  .render(~SimpleCounter{})
